{
  "PasswordValidatorOptions": {
    "RequiredMinLength": 8,
    "RequiredMaxLenght": 50,
    "RequiredNonLetterOrDigitLength": 1,
    "RequiredLowercaseLength": 1,
    "RequiredUppercaseLength": 0,
    "RequiredDigitLength": 1
  },
  "DatabaseOptions": {
    "ConnectionString": "Server=(localdb)\\MSSQLLocalDB;Database=ShortenUrl;Integrated Security=True;Connect Timeout=30;Encrypt=False;Trust Server Certificate=False;Application Intent=ReadWrite;Multi Subnet Failover=False;Trusted_Connection=True",
    "MaxRetryCount": 5,
    "MaxRetryDelay": "00:00:10",
    "ErrorNumbersToAdd": [ 1205, 4060 ],
    "EnableDetailError": true,
    "EnableSensitiveDataLogging": false
  },
  "IdentityOptions": {
    "Lockout": {
      "DefaultLockoutTimeSpan": "00:05:00",
      "MaxFailedAccessAttempts": 5,
      "AllowedForNewUsers": true
    },
    "Password": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequiredLength": 6,
      "RequireNonAlphanumeric": true,
      "RequireUppercase": true,
      "RequiredUniqueChars": 1,
      "RequiredMinLength": 8,
      "RequiredMaxLenght": 50,
      "RequiredNonLetterOrDigitLength": 1,
      "RequiredLowercaseLength": 1,
      "RequiredUppercaseLength": 0,
      "RequiredDigitLength": 1
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "SignIn": {
      "RequireConfirmedEmail": true
    }
  },
  "PasswordOptions": {
    "RequiredLength": 6,
    "RequireNonAlphanumeric": true,
    "RequireDigit": true
  },
  "Caching": {
    "Redis": {
      "Enabled": true,
      "ConnectionString": "localhost:6379",
      "InstanceName": "ShortURLCache"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "ShortURL",
      "Environment": "Production"
    }
  },

  "JwtOptions": {
    "Key": "tQkM8cZXgXP1GK9O841hBaoHIDoEwtud",
    "Issuer": "ShortURL",
    "Audience": "ShortURL",
    "TokenExpiryInMinutes": 5
  },

  "ShortenerSettings": {
    "DefaultExpiryInDays": 30,
    "AnonymousRateLimit": {
      "Limit": 100,
      "TimeWindowInMinutes": 60
    },
    "RegisteredRateLimit": {
      "Limit": 500,
      "TimeWindowInMinutes": 60
    },
    "UrlCollisionRetries": 5,
    "KeyLength": 7
  },

  "ExternalAPIs": {
    "GeoLocationService": {
      "Enabled": true,
      "BaseUrl": "https://api.geoip.com",
      "ApiKey": "your-geolocation-api-key"
    }
  },

  "HealthChecks": {
    "Urls": [
      "https://short.url",
      "https://api.geoip.com"
    ],
    "Timeout": 3000
  },

  "AllowedHosts": "*",

  "SecurityHeaders": {
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self'; style-src 'self';",
    "XFrameOptions": "DENY",
    "XXSSProtection": "1; mode=block",
    "ReferrerPolicy": "strict-origin-when-cross-origin",
    "PermissionsPolicy": "geolocation=(self), microphone=()"
  }
}
